<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ariasJEvDos.MainPage"
             Title="Pagina Principal">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
    <Label Text="Javier Arias" FontSize="32" HorizontalOptions="Center"/>

    <Image Source="javier.png" HeightRequest="200" HorizontalOptions="Center"/>

    <Button Text="Ver Chiste" Clicked="VerChiste_Clicked" />
    <Button Text="Sobre mi" Clicked="SobreMi_Clicked" />
 </StackLayout>
 </ContentPage>   

private async void VerChiste_Clicked(object sender, EventArgs e)
{
    await Navigation.PushAsync(new ChistePage());
}  

private async void SobreMi_Clicked(object sender, EventArgs e)
{
    await Navigation.PushAsync(new SobreMiPage());
}
